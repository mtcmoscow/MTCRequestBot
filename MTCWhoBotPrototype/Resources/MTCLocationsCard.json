{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "Choose the location for this engagement.",
      "size": "Medium",
      "weight": "Bolder"
    },
    {
      "type": "Input.ChoiceSet",      
      "id": "MTCLocation",      
      "choices": [
        {
          "$data": "${MTCLocations}",
          "title": "${Title}",
          "value": "${Title}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2"
}